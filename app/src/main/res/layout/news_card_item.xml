<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/news_card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:background="@color/colorCardDataBackground"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/news_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:gravity="center">
            </TextView>

            <ImageView
                android:id="@+id/news_iv_image"
                android:layout_height="match_parent"
                android:layout_width="150dp"
                android:scaleType="fitXY"
                android:layout_below="@+id/news_tv_title">
            </ImageView>


            <TextView
                android:id="@+id/news_tv_text"
                android:layout_toRightOf ="@+id/news_iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_tv_title">>
            </TextView>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>